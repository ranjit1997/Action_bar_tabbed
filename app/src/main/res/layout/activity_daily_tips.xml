<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daily_tips"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="@drawable/daily_background">
        <TextView
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:id="@+id/step"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:text="Steps:"
            android:textColor="#c21807"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            />

        <TextView
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:id="@+id/tv_steps"
            android:textStyle="bold"
            android:textColor="#c21807"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="235dp"
        android:layout_marginRight="200dp"
        android:background="@drawable/white_border"
        android:text="Start Pedometer" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="232dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_border"
        android:text="Stop Pedometer" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginTop="290dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/userlayout">

        <GridView
            android:id="@+id/customgrid5"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/os_texts"
            android:numColumns="1"
            tools:ignore="UnknownId" />


    </RelativeLayout>




</RelativeLayout>